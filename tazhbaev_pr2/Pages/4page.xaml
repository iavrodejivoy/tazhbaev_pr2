<Window x:Class="tazhbaev_pr2.Pages._4page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tazhbaev_pr2.Pages"
        mc:Ignorable="d"
        Title="Четвертое задание" Height="197" Width="479">
    <Grid Margin="0,0,10,11">
        <Label Content="Дан массив размера N. Переставить в обратном порядке элементы массива, &#xD;&#xA;расположенные между его минимальным и максимальным элементами." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="inputRazmernost" HorizontalAlignment="Left" Margin="10,57,0,0" TextWrapping="Wrap" Text="Введите размерность случайно заполненного массива" VerticalAlignment="Top" Width="318"/>
        <Button x:Name="createButton" Content="Создать и переставить" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Click="createButton_Click"/>
        <TextBox x:Name="createdArray" HorizontalAlignment="Left" Margin="10,105,0,0" TextWrapping="Wrap" Text="Созданный массив" VerticalAlignment="Top" Width="438"/>
        <TextBox x:Name="createdSortedArray" HorizontalAlignment="Left" Margin="10,128,0,0" TextWrapping="Wrap" Text="Переставленный массив" VerticalAlignment="Top" Width="438"/>
    </Grid>
</Window>
