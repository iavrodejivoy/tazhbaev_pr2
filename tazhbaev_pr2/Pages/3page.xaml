<Window x:Class="tazhbaev_pr2.Pages._3page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tazhbaev_pr2.Pages"
        mc:Ignorable="d"
        Title="Третье задание" Height="189" Width="634">
    <Grid Margin="0,0,0,11">
        <Label Content="Дан целочисленный массив размера N. Вывести вначале все его четные элементы, а затем — нечетные." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="33" Width="590"/>
        <TextBox x:Name="inputRazmer" HorizontalAlignment="Left" Margin="10,48,0,0" TextWrapping="Wrap" Text="Введите размерность случайно заполненного массива" VerticalAlignment="Top" Width="318"/>
        <Button x:Name="sortButton" Content="Сгенерировать и отсортировать" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.486,0.831" Click="sortButton_Click"/>
        <TextBox x:Name="outputUnsortArray" HorizontalAlignment="Left" Margin="10,96,0,0" TextWrapping="Wrap" Text="Сгенерированный массив" VerticalAlignment="Top" Width="590"/>
        <TextBox x:Name="outputSortArray" HorizontalAlignment="Left" Margin="10,119,0,0" TextWrapping="Wrap" Text="Отсортированный массив" VerticalAlignment="Top" Width="590"/>

    </Grid>
</Window>
